<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cобытия клавиатуры" Height="200" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBox Name="MyTextBox" KeyDown="MyTextBox_KeyDown" Width="350" Height="30" Margin="0,0,0,10" Text="Нажмите Shift + F12" />
            <Label Content="Введите номер телефона:" Margin="0,10,0,0" />
            <TextBox Name="PhoneTextBox" PreviewTextInput="PhoneTextBox_PreviewTextInput" PreviewKeyDown="PhoneTextBox_PreviewKeyDown" Width="350" Height="30" />
       <Button Content="2 Задание" Margin="0,10,0,0" Width="100" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window>
