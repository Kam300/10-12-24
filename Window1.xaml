<Window x:Class="WpfApp3.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Drag and Drop Example" Height="400" Width="400">
    <Canvas Name="canvas" Background="LightGray"
            MouseDown="Canvas_MouseDown"
            MouseMove="Canvas_MouseMove"
            MouseUp="Canvas_MouseUp">
        <Rectangle Name="rect1" Width="80" Height="50" Fill="Red" Canvas.Left="50" Canvas.Top="50" />
        <Rectangle Name="rect2" Width="80" Height="50" Fill="Green" Canvas.Left="150" Canvas.Top="150" />
        <Rectangle Name="rect3" Width="80" Height="50" Fill="Blue" Canvas.Left="250" Canvas.Top="50" />
    </Canvas>
</Window>
